# AgentGuard Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===== Database Configuration =====
DATABASE_URL=postgresql://agentguard:CHANGE_THIS_PASSWORD@db-host.region.rds.amazonaws.com:5432/agentguard
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ===== Authentication =====
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_KEY

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=WARNING
LOG_FORMAT=json

# ===== CORS Configuration =====
# Comma-separated list of allowed origins
CORS_ORIGINS=https://dashboard.yourdomain.com,https://api.yourdomain.com

# ===== Agent Configuration =====
AGENT_ID_PREFIX=agt_
API_KEY_PREFIX=agk_

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
# Use Redis for production (replace memory://)
RATE_LIMIT_STORAGE_URI=redis://redis.cache.amazonaws.com:6379/0

# ===== Monitoring & Metrics =====
METRICS_ENABLED=true
METRICS_PATH=/metrics

# ===== Performance =====
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# ===== Security =====
ENABLE_HTTPS=true
TRUST_PROXY_HEADERS=true
